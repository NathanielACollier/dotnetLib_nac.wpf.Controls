<UserControl x:Class="nac.wpf.Controls.FilePicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="filePickerNCUserControl"          
    mc:Ignorable="d"
    d:DesignHeight="20"
    d:DesignWidth="400">

    <DockPanel>
        <Button x:Name="PickFileButton" DockPanel.Dock="Left" Click="PickFileButton_Click">...</Button>
        <TextBox IsReadOnly="True" ToolTip="{Binding ElementName=filePickerNCUserControl, Path=FilePath}" Text="{Binding ElementName=filePickerNCUserControl, Path=FilePath}" />
    </DockPanel>

</UserControl>